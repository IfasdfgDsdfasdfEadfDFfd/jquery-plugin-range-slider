{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-sass-guidelines",
    "stylelint-config-hudochenkov/full"
  ],
  "plugins": [
    "stylelint-scss",
    "stylelint-order"
  ],
  "ignoreFiles": "./dist/**/*.css",
  "rules": {
    "order/properties-alphabetical-order": null,
    "indentation": 2,
    "max-nesting-depth": 2,
    "selector-max-type": 1,
    "selector-no-qualifying-type": [
      true,
      {
        "ignore": [
          "attribute"
        ]
      }
    ]
  }
}
